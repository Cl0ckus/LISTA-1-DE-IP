//QUEST√ÉO 3 DA LISTA DE IP

#include <stdio.h>
#include <stdlib.h>
#define LINES 20
#define COLUMNS 20




void scanMatrice(int size, int matrice[LINES][COLUMNS]){
    int i, j;
    for(i=0; i<size; i++){
        for(j=0; j<size; j++){
            printf("Type element [%d][%d]\n",i+1,j+1);
            scanf("%d", &matrice[i][j]);

        }

    }

}

void printMatrice(int size, int matrice[LINES][COLUMNS]){

    int i, j;

     for(i=0; i<size; i++){
            printf("| ");
        for(j=0; j<size; j++){
            
            printf("%d ", matrice[i][j]);

        }
        
        printf("|");
        printf("\n");

    }
}


int verifyIdentity(int size, int matrice[LINES][COLUMNS]){
    int i, j;
    int identity=0;


    
   
    for(i=0; i<size; i++){
      for(j=0; j<size; j++){
        if(i==j){
          if(matrice[i][j]==1){
            identity=1;
          }
          else{
            identity = 0;
            j=size+1;
            i=size+1;
          }
        }
        if(i!=j){
          if(matrice[i][j]==0){
            identity=1;
          }
          else{
            identity=0;
            j=size+1;
            i=size+1;
          }
        }

      }

    }

    return identity;


}



int main()
{
    int sizeM, matriceM[LINES][COLUMNS], identityM,i,j;

    printf("What is the size of your matrice?\n");
    scanf("%d", &sizeM);
    scanMatrice(sizeM,matriceM);
    //for(i=0; i<sizeM; i++){
      //for(j=0;j<sizeM;j++){
        //printf("%d",matriceM[i][j]);
      //}
    //}
    //printf("%d", sizeM);
    identityM = verifyIdentity(sizeM, matriceM);

    if(identityM==0){
        printf("\nThe matrice:\n\n");
        printMatrice(sizeM,matriceM);
        printf("\nis not identity\n");
    }
    else if (identityM==1){
        printf("\nThe matrice:\n\n");
        printMatrice(sizeM,matriceM);
        printf("\nis identity\n");
    }

    return 0;
}
