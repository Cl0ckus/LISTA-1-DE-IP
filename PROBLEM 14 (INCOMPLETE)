void atualizaEstoque(){
    
    
    int code, ammount;
    char option;

    itemStock estoque[N]={{100, "POKEBALL", 100, 200.00},
                         {101, "GREATBALL", 100, 600.00},
                         {200, "POTION", 100, 300.00}};



   // itemStock pokeball, greatball, potion;

   // pokeball.code = 100;
    //pokeball.product = {"POKEBALL"};
   // pokeball.qtd = 15;
   // pokebal.price = 100;

   // greateball.code = 101;
   // greatball.product = {"GREATBALL"};
   // greatball.qtd = 15;
   // greatbal.price = 600;

   // potion.code = 100;
   // potion.product = {"GREATBALL"};
   // potion.qtd = 15;
   // potion.price = 300;

    do{
        printf("What item do you want to replenish?(TYPE THE ITEM CODE)\n");
        scanf("%d", &code);
        printf("How many itens do you want to add?\n");
        scanf("%d", &ammount);

        if(code==100){
            estoque[1].qtd+=ammount;
        }
        else if(code==101{
            estoque[2].qtd+=ammount;
        }
        else if(code==102){
            estoque[3].qtd+=ammount;
        }

        printf("Do you want to replenish another Item?(Y/n)\n");
        scanf("%c", &option);
    }while(option=='Y');


}


