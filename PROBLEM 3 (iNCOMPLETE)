//QUEST√ÉO 3 DA LISTA DE IP

#include <stdio.h>
#include <string.h>
#define MAX1 10
#define MAX2 10
#define TRUE 1
#define FALSE 0

void verifyIdentity(int lines, int matrice[MAX1][MAX2], char* identity){

    int i,j,  columns;
    char boolean;
    

  

    printf("WELCOME TO THE NEW MATRIZ IDENTITY SOLUTION 5000\n\n");
    printf("Type how many lines and columns your matrice has: \n");
    scanf("%d", &lines);

    columns=lines;

    for(i=0; i<lines; i++){
        for(j=0; j<lines; j++){
            
            printf("Type the element [%d][%d]: \n", i+1, j+1);
            scanf("%d", &matrice[i][j]);

         }

    }

    do{
        boolean=FALSE;
        for(i=0; i<lines; i++){
            for(i=0; j<lines; i++){
                if(i==j){
                    if(matrice[i][j]==1){
                        strcpy(identity, "TRUE");
                        boolean = TRUE;

                    }
                }
                else if(i!=j){
                   if(matrice[i][j]==0){
                        strcpy(identity, "TRUE");
                        boolean = TRUE;

                    }
                }

                if(boolean==FALSE){
                    strcpy(identity, "FALSE");
                }

            }

        }

        
    }while(boolean==TRUE&&j<lines);

    

}





int main(){

    int size, m[MAX1][MAX2];
    char confirmation[100];
    char identityp[100];
    verifyIdentity(size, m, identityp);
    strcpy(confirmation, identityp);
    printf("%s", confirmation);


    return 0;
}
