//QUEST√ÉO 3 DA LISTA DE IP

#include <stdio.h>
#include <stdlib.h>
#define LINES 20
#define COLUMNS 20

int verifyIdentity(int size, int matrice[LINES][COLUMNS]){
    int i, j;
    int identity=0;

    printf("What is the size of your matrice?\n");
    scanf("%d", &size);

    for(i=0; i<size; i++){
        for(j=0; j<size; j++){
            printf("Type element [%d][%d]\n",i+1,j+1);
            scanf("%d", &matrice[i][j]);

        }

    }
    for(i=0; i<size; i++){
            printf("| ");
        for(j=0; j<size; j++){
            
            printf("%d ", matrice[i][j]);

        }
        
        printf("|");
        printf("\n");

    }
    for(i=0; i<size; i++){
      for(j=0; j<size; j++){
        if(i==j){
          if(matrice[i][j]==1){
            identity=1;
          }
          else{
            identity = 0;
            j=size+1;
            i=size+1;
          }
        }
        if(i!=j){
          if(matrice[i][j]==0){
            identity=1;
          }
          else{
            identity=0;
            j=size+1;
            i=size+1;
          }
        }

      }

    }

    return identity;


}



int main()
{
    int sizeM, matriceM[LINES][COLUMNS], identityM;
    identityM = verifyIdentity(sizeM, matriceM);
    printf("%d", identityM);

    return 0;
}
