#include <stdio.h>
#include <string.h>
#define TRUE 1
#define FALSE 0






char* verifyDiagonal(int size, int matrice[][20]){

    int i,j,size;
    char diagonal[10];
    char boolean;

    printf("What is the size of your matrice NxN?\n");
    scanf("%d", &size);
    for(i=0; i<size; i++){
        for(j=0;j<size; j++){
            printf("Type the element [%d][%d]\n", i+1, j+1);
            scanf("%d", &matrice[i][j]);

        }

    }

    for(i=0; i<size; i++){
        printf("| ");
        for(j=0; j<size; j++){
            printf("%d ", matrice[i][j]);
        
       printf("|\n");
    }

    do{
        boolean = FALSE;
    for(i=0; i<size; i++){
        for(j=0; j<size; j++){

            if(i<=j&&matrice[i][j]!=0){
                
                strcpy(diagonal, "TRUE");
                boolean=TRUE;
            }

            else if(i>j&&matrice[i][j]==0){
                strcpy(diagonal, "TRUE");
                boolean=TRUE;

            }
            else{
                strcpy(diagonal, "FALSE");
            }
           
    }
    while(boolean==TRUE);
    
    return diagonal;
}




//void verifyDiagonal()




int main(){

    int matriceZ[10][10], sizeZ ;
    char *diagonalZ[20];


    printf("%s", verifyDiagonal(sizeZ, matriceZ));

    //gcc main.c -o main
    return 0;
}
